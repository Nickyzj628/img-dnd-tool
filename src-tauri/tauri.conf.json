{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "图片处理工具",
  "version": "0.1.0",
  "identifier": "com.imgdndtool.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Image Drag-and-Drop Tool",
        "width": 600,
        "height": 400,
        "minWidth": 500,
        "minHeight": 350,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
